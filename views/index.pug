extends layout

block content
  h1= title
  a.button.green-button(href='/books/new') Create New Book

  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      - books.forEach(function(book) {
        tr
          td.book-title
            a(href=`/books/${book.id}`) #{book.title}
          td #{book.author}
          td #{book.genre}
          td #{book.year}
      - })