extends layout

block content
  h1 New Book

  if errors
    h2.error Oooops!
    ul.error
      each error in errors
        li= error.message

  form(action='/books/new', method='post')

    p
      label(for='title') Title
      input#title(name='title' type='text')

    p
      label(for='author') Author
      input#author(name='author' type='text')

    p
      label(for='genre') Genre
      input#genre(name='genre' type='text')

    p
      label(for='year') Year
      input#year(name='year' type='text')

    p
      input.green-button(type='submit' value='Create New Book')

    p
      a.button.green-button(href='/books') Cancel

